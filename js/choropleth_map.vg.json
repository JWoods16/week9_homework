{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Wine Exported in 2022 (million hectolitres) Worldwide",
  "width": 800,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      },
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/JWoods16/week9_homework/refs/heads/main/wine_data_export.csv"
            },
            "key": "Country",
            "fields": [
              "Y2022"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "encoding": {
        "color": {
          "field": "Y2022",
          "type": "quantitative",
          "scale": {
            "scheme": "blues"
          },
          "legend": {
            "title": "Wine exported (million hectolitres)"
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Y2022",
            "type": "quantitative",
            "title": "Wine Exported (million hectolitres)"
          }
        ]
      }
    }
  ]
}
